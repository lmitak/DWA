            <br/>
            <label for='alergeni'>Alergeni: </label>
            <select id='alergeni' name='alergeni'>"
                {% for alergen in alergeni %}
                    <option value="{{ alergen.id }}">{{ alergen.naziv }}</option>
                {% endfor %}
            </select>
            <br/>
            <label for='cijena'>Cijena: </label>
            <input type='number' name='cijena' id='cijena'> kn
            <br/>
            <input type='submit'/>
        </form>

        <form>
            <br>
            <br>
            <h2>Dodaj kategoriju:</h2>
            <form method='post' action='addItem/2'>
                <label for="category">Nova kategorija: </label>
                <input type="text" name="category" id="category"/>
                <input type="submit" value="Dodaj"/>
            </form>
            <br><br>
            <h2>Dodaj alergen:</h2>
            <form method='post' action='addItem/3'>
                <label for="alergen">Novi alergen: </label>
                <input type="text" name="alergen" id="alergen"/>
                <input type="submit" value="Dodaj"/>
